# OpenID Connect Server Configuration
# Copy this file to config.toml and update the values

issuer = "http://localhost:8080"

[server]
host = "0.0.0.0"
port = 8080

[storage]
# Storage type: "mongodb" or "json"
type = "json"

# MongoDB connection URI (only used when type = "mongodb")
mongo_uri = "mongodb://localhost:27017/openid"

# JSON file path (only used when type = "json")
json_file_path = "data.json"

[jwt]
# Path to RSA private key for signing JWT tokens
private_key_path = "config/keys/private.key"

# Path to RSA public key for verifying JWT tokens
public_key_path = "config/keys/public.key"

# JWT token expiry time in minutes
expiry_minutes = 60
